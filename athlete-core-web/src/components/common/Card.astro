---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  clickable?: boolean;
}

const { class: className = '', padding = 'lg', href, clickable = false } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag 
  href={href} 
  class:list={[
    'card', 
    `padding-${padding}`, 
    { clickable },
    className
  ]}
>
  <slot />
</Tag>

<style>
  .card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    /* Sombra ultra sutil apenas para levantar levemente */
    /* box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); */
    transition: border-color var(--transition-fast);
    overflow: hidden; /* Para imagens n√£o vazarem os cantos */
  }

  .card:hover {
    border-color: var(--color-border-hover);
  }

  .card.clickable {
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card.clickable:hover {
    border-color: var(--color-foreground);
  }

  .padding-none { padding: 0; }
  .padding-sm { padding: var(--spacing-sm); }
  .padding-md { padding: var(--spacing-md); }
  .padding-lg { padding: var(--spacing-lg); }
</style>
