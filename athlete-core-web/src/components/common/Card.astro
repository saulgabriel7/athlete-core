---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { class: className = '', padding = 'lg' } = Astro.props;
---

<div class={`card padding-${padding} ${className}`}>
  <slot />
</div>

<style>
  .card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    /* Sombra ultra sutil apenas para levantar levemente */
    /* box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); */
    transition: border-color var(--transition-fast);
    overflow: hidden; /* Para imagens n√£o vazarem os cantos */
  }

  .card:hover {
    border-color: var(--color-border-hover);
  }

  .padding-none { padding: 0; }
  .padding-sm { padding: var(--spacing-sm); }
  .padding-md { padding: var(--spacing-md); }
  .padding-lg { padding: var(--spacing-lg); }
</style>
