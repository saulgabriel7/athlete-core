---
/**
 * ATHLETE CORE - Dashboard Layout
 * Layout para p√°ginas autenticadas com sidebar
 */

import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/layout/Sidebar.astro';
import Header from '../components/layout/Header.astro';
import AIChatWidget from '../components/ai/AIChatWidget.astro';
import InstallPrompt from '../components/pwa/InstallPrompt.astro';
import { getUserId } from '../services/clerkServer';

interface Props {
  title?: string;
  pageTitle?: string;
  description?: string;
}

const {
  title = 'Dashboard',
  pageTitle,
  description = 'Dashboard do ATHLETE CORE',
} = Astro.props;

const currentPath = Astro.url.pathname;
const userId = getUserId(Astro.locals);
---

<BaseLayout title={title} description={description}>
  <div class="dashboard-layout">
    <!-- Background Glow -->
    <div class="dashboard-glow"></div>
    
    <Sidebar currentPath={currentPath} />
    
    <div class="dashboard-wrapper">
      <Header title={pageTitle} />
      
      <main class="dashboard-content">
        <div class="container">
          <slot />
        </div>
      </main>
    </div>

    <!-- Assistente de IA -->
    <AIChatWidget userId={userId || undefined} />
    
    <!-- PWA Install Prompt -->
    <InstallPrompt />
  </div>
</BaseLayout>

<style>
  .dashboard-layout {
    min-height: 100vh;
    position: relative;
  }

  .dashboard-glow {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 500px;
    background: radial-gradient(ellipse 60% 50% at 50% -10%, rgba(196, 255, 59, 0.08) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .dashboard-wrapper {
    margin-left: var(--sidebar-width);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    transition: margin-left var(--transition-fast);
    position: relative;
    z-index: 1;
  }

  .dashboard-content {
    flex: 1;
    padding: var(--spacing-2xl);
    animation: fadeIn var(--transition-base) ease-out;
  }

  .container {
    max-width: var(--container-width);
    margin: 0 auto;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .dashboard-wrapper {
      margin-left: 0;
    }

    .dashboard-content {
      padding: var(--spacing-lg);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
