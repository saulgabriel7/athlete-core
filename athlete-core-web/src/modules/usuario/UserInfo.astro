---
/**
 * ATHLETE CORE - User Info
 * InformaÃ§Ãµes do perfil com design premium
 */

import Card from '../../components/common/Card.astro';
import UserAvatar from '../../components/layout/UserAvatar.astro';
import { formatWeight, formatHeight, formatIMC, formatCalories, formatMacro } from '../../utils/formatters';
import type { User } from '../../types/user';
import type { ClerkUser } from '../../types/user';

interface Props {
  user?: User;
  clerkUser?: ClerkUser;
}

const { user, clerkUser } = Astro.props;

const imcInfo = user?.imc ? formatIMC(user.imc) : null;
---

<div class="user-info">
  <!-- Profile Card -->
  <Card class="profile-card">
    <div class="profile-header">
      <UserAvatar 
        src={clerkUser?.imageUrl} 
        name={clerkUser?.fullName || user?.nome} 
        size="xl" 
      />
      <div class="profile-details">
        <h1>{clerkUser?.fullName || user?.nome || 'UsuÃ¡rio'}</h1>
        {clerkUser?.emailAddresses[0] && (
          <p class="email">{clerkUser.emailAddresses[0].emailAddress}</p>
        )}
      </div>
    </div>
  </Card>

  {user && (
    <>
      <!-- Physical Data -->
      <Card class="stats-card">
        <div class="card-header">
          <h2>
            <span class="card-icon">ðŸ“Š</span>
            Dados FÃ­sicos
          </h2>
        </div>
        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-value">{formatWeight(user.peso)}</span>
            <span class="stat-label">Peso</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">{formatHeight(user.altura)}</span>
            <span class="stat-label">Altura</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">{user.idade}</span>
            <span class="stat-label">Anos</span>
          </div>
          {imcInfo && (
            <div class="stat-item imc">
              <span class="stat-value">{imcInfo.value}</span>
              <span class="stat-label">IMC</span>
              <span class="stat-sub">{imcInfo.classification}</span>
            </div>
          )}
        </div>
      </Card>

      <!-- Goals -->
      <Card class="goals-card">
        <div class="card-header">
          <h2>
            <span class="card-icon">ðŸŽ¯</span>
            Objetivos
          </h2>
        </div>
        <div class="goals-list">
          <div class="goal-item">
            <span class="goal-label">Objetivo FÃ­sico</span>
            <span class="goal-badge primary">{user.objetivoFisico}</span>
          </div>
          <div class="goal-item">
            <span class="goal-label">NÃ­vel de ExperiÃªncia</span>
            <span class="goal-badge">{user.nivelExperiencia}</span>
          </div>
          {user.restricoesAlimentares && user.restricoesAlimentares.length > 0 && (
            <div class="goal-item">
              <span class="goal-label">RestriÃ§Ãµes Alimentares</span>
              <div class="goal-tags">
                {user.restricoesAlimentares.map((r) => (
                  <span class="goal-tag">{r}</span>
                ))}
              </div>
            </div>
          )}
        </div>
      </Card>

      <!-- Nutrition Plan -->
      {user.planoNutricional && (
        <Card class="nutrition-card">
          <div class="card-header">
            <h2>
              <span class="card-icon">ðŸ”¥</span>
              Plano Nutricional
            </h2>
          </div>
          <div class="nutrition-grid">
            <div class="nutrition-item">
              <span class="nutrition-value">{user.planoNutricional.tmb}</span>
              <span class="nutrition-label">TMB (kcal)</span>
            </div>
            <div class="nutrition-item">
              <span class="nutrition-value">{user.planoNutricional.tdee}</span>
              <span class="nutrition-label">TDEE (kcal)</span>
            </div>
            <div class="nutrition-item highlight">
              <span class="nutrition-value">{formatCalories(user.planoNutricional.metaCalorica)}</span>
              <span class="nutrition-label">Meta DiÃ¡ria</span>
            </div>
          </div>
          
          <div class="macros-section">
            <h3>Macros Recomendados</h3>
            <div class="macros-grid">
              <div class="macro-item">
                <span class="macro-value">{user.planoNutricional.macros.proteina}g</span>
                <span class="macro-label">ProteÃ­na</span>
              </div>
              <div class="macro-item">
                <span class="macro-value">{user.planoNutricional.macros.carboidrato}g</span>
                <span class="macro-label">Carboidrato</span>
              </div>
              <div class="macro-item">
                <span class="macro-value">{user.planoNutricional.macros.gordura}g</span>
                <span class="macro-label">Gordura</span>
              </div>
            </div>
          </div>

          {user.aguaDiaria && (
            <div class="water-tip">
              <span class="water-icon">ðŸ’§</span>
              <span>RecomendaÃ§Ã£o de Ã¡gua: <strong>{user.aguaDiaria}L</strong> por dia</span>
            </div>
          )}
        </Card>
      )}
    </>
  )}
</div>

<style>
  .user-info {
    max-width: 800px;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .profile-card {
    animation: fadeInUp var(--transition-base) ease-out;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .profile-details h1 {
    font-size: var(--font-size-2xl);
    margin: 0 0 var(--spacing-xs) 0;
    color: var(--color-foreground);
    font-weight: var(--font-weight-semibold);
  }

  .email {
    color: var(--color-foreground-muted);
    margin: 0;
    font-size: var(--font-size-sm);
  }

  .card-header {
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
  }

  .card-header h2 {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0;
    color: var(--color-foreground);
  }

  .card-icon {
    font-size: var(--font-size-lg);
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-md);
  }

  .stat-item {
    text-align: center;
    padding: var(--spacing-md);
    background: var(--color-background-elevated);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: 4px;
    transition: all var(--transition-fast);
  }

  .stat-item:hover {
    border-color: var(--color-border-hover);
  }

  .stat-item.imc {
    background: var(--color-accent-muted);
    border-color: rgba(196, 255, 59, 0.2);
  }

  .stat-value {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-foreground);
  }

  .stat-item.imc .stat-value {
    color: var(--color-accent);
  }

  .stat-label {
    font-size: var(--font-size-xs);
    color: var(--color-foreground-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .stat-sub {
    font-size: var(--font-size-xs);
    color: var(--color-foreground-subtle);
  }

  /* Goals */
  .goals-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .goal-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .goal-item:last-child {
    border-bottom: none;
  }

  .goal-label {
    color: var(--color-foreground-muted);
    font-size: var(--font-size-sm);
  }

  .goal-badge {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    padding: 4px 12px;
    border-radius: var(--radius-full);
    background: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
  }

  .goal-badge.primary {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-black);
    font-weight: var(--font-weight-semibold);
  }

  .goal-tags {
    display: flex;
    gap: var(--spacing-xs);
    flex-wrap: wrap;
  }

  .goal-tag {
    font-size: var(--font-size-xs);
    padding: 4px 10px;
    background: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-foreground-muted);
  }

  /* Nutrition */
  .nutrition-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .nutrition-item {
    text-align: center;
    padding: var(--spacing-lg);
    background: var(--color-background-elevated);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .nutrition-item.highlight {
    background: var(--color-accent);
    border-color: var(--color-accent);
  }

  .nutrition-value {
    display: block;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-xs);
    color: var(--color-foreground);
  }

  .nutrition-item.highlight .nutrition-value {
    color: var(--color-black);
  }

  .nutrition-label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-foreground-muted);
  }

  .nutrition-item.highlight .nutrition-label {
    color: rgba(0, 0, 0, 0.6);
  }

  .macros-section {
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .macros-section h3 {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-foreground-muted);
    margin: 0 0 var(--spacing-md) 0;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .macros-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
  }

  .macro-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .macro-value {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-foreground);
  }

  .macro-label {
    font-size: var(--font-size-xs);
    color: var(--color-foreground-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .water-tip {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
    padding: var(--spacing-md);
    background: var(--color-secondary-muted);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    color: var(--color-foreground-muted);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .water-icon {
    font-size: var(--font-size-lg);
  }

  .water-tip strong {
    color: var(--color-secondary);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .profile-header {
      flex-direction: column;
      text-align: center;
    }

    .nutrition-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
