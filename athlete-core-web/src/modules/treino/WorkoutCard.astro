---
/**
 * ATHLETE CORE - Workout Card
 * Card de plano de treino com design premium
 */

import Card from '../../components/common/Card.astro';
import type { WorkoutPlan } from '../../types/workout';

interface Props {
  workout: WorkoutPlan;
}

const { workout } = Astro.props;

const gruposUnicos = workout.resumo?.gruposMusculares || [];
---

<Card href={`/treino/${workout.id}`} clickable>
  <div class="workout-card">
    <div class="workout-header">
      <div class="workout-info">
        <h3 class="workout-name">{workout.nome}</h3>
        {workout.ativo && (
          <span class="status-badge">
            <span class="status-dot"></span>
            Ativo
          </span>
        )}
      </div>
      <span class="workout-arrow">→</span>
    </div>
    
    <div class="workout-meta">
      <div class="meta-item">
        <span class="meta-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6.5 6.5 11 11"/><path d="m21 21-1-1"/><path d="m3 3 1 1"/>
          </svg>
        </span>
        <span class="meta-value">{workout.resumo?.totalExercicios || 0}</span>
        <span class="meta-label">exercícios</span>
      </div>
      <div class="meta-item">
        <span class="meta-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/>
          </svg>
        </span>
        <span class="meta-value">{workout.resumo?.diasDeTreino.length || 0}</span>
        <span class="meta-label">dias/sem</span>
      </div>
    </div>

    {gruposUnicos.length > 0 && (
      <div class="workout-groups">
        {gruposUnicos.slice(0, 4).map((grupo) => (
          <span class="group-tag">{grupo}</span>
        ))}
        {gruposUnicos.length > 4 && (
          <span class="group-tag more">+{gruposUnicos.length - 4}</span>
        )}
      </div>
    )}

    {workout.observacoes && (
      <p class="workout-obs">{workout.observacoes}</p>
    )}
  </div>
</Card>

<style>
  .workout-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .workout-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--spacing-md);
  }

  .workout-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .workout-name {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0;
    color: var(--color-foreground);
    line-height: var(--line-height-tight);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: var(--color-success);
    background: rgba(34, 197, 94, 0.1);
    padding: 4px 10px;
    border-radius: var(--radius-full);
    border: 1px solid rgba(34, 197, 94, 0.2);
    width: fit-content;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--color-success);
    border-radius: var(--radius-full);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .workout-arrow {
    font-size: var(--font-size-xl);
    color: var(--color-foreground-subtle);
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-fast);
  }

  .workout-card:hover .workout-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-accent);
  }

  .workout-meta {
    display: flex;
    gap: var(--spacing-lg);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--color-foreground-muted);
    font-size: var(--font-size-sm);
  }

  .meta-icon {
    display: flex;
    color: var(--color-foreground-subtle);
  }

  .meta-value {
    font-weight: var(--font-weight-semibold);
    color: var(--color-foreground);
  }

  .workout-groups {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .group-tag {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: var(--color-foreground-muted);
    background: var(--color-background-elevated);
    padding: 4px 10px;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-border);
    text-transform: capitalize;
  }

  .group-tag.more {
    color: var(--color-accent);
    background: var(--color-accent-muted);
    border-color: rgba(196, 255, 59, 0.2);
  }

  .workout-obs {
    font-size: var(--font-size-sm);
    color: var(--color-foreground-muted);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--color-border);
  }
</style>
