---
/**
 * ATHLETE CORE - Sign Up Module
 * Componente de cadastro com design premium
 */

import { SignUp as ClerkSignUp } from '@clerk/astro/components';
---

<div class="auth-container">
  <!-- Background Effects -->
  <div class="auth-bg">
    <div class="glow glow-1"></div>
    <div class="glow glow-2"></div>
    <div class="grid-overlay"></div>
  </div>

  <div class="auth-content">
    <div class="auth-header">
      <a href="/" class="logo">
        <span class="logo-main">ATHLETE</span><span class="logo-accent">CORE</span>
      </a>
      <p class="auth-subtitle">Crie sua conta</p>
    </div>

    <div class="auth-form">
      <ClerkSignUp 
        appearance={{
          elements: {
            rootBox: "clerk-root",
            card: "clerk-card",
            headerTitle: "clerk-title",
            headerSubtitle: "clerk-subtitle",
            socialButtonsBlockButton: "clerk-social-btn",
            formButtonPrimary: "clerk-primary-btn",
            formFieldInput: "clerk-input",
            formFieldLabel: "clerk-label",
            footerActionLink: "clerk-link",
            dividerLine: "clerk-divider",
            dividerText: "clerk-divider-text",
            footer: "clerk-footer"
          },
          variables: {
            colorPrimary: "#c4ff3b",
            colorBackground: "#121214",
            colorInputBackground: "#18181b",
            colorInputText: "#fafafa",
            colorText: "#fafafa",
            colorTextSecondary: "#a1a1aa",
            borderRadius: "12px",
            fontFamily: "Sora, system-ui, sans-serif",
            spacingUnit: "4px"
          }
        }}
      />
    </div>

    <div class="auth-footer">
      <p>JÃ¡ tem uma conta? <a href="/sign-in">Entrar</a></p>
    </div>
  </div>
</div>

<style>
  .auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl);
    position: relative;
    overflow: hidden;
  }

  /* Background Effects */
  .auth-bg {
    position: fixed;
    inset: 0;
    pointer-events: none;
  }

  .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .glow-1 {
    width: 500px;
    height: 500px;
    background: var(--color-accent);
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0.1;
  }

  .glow-2 {
    width: 300px;
    height: 300px;
    background: var(--color-secondary);
    bottom: -100px;
    right: 10%;
    opacity: 0.08;
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
  }

  .auth-content {
    width: 100%;
    max-width: 420px;
    position: relative;
    z-index: 1;
    animation: fadeInUp var(--transition-base) ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .auth-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .logo {
    display: inline-flex;
    gap: 0.2em;
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: var(--letter-spacing-tight);
    text-decoration: none;
    color: var(--color-foreground);
    margin-bottom: var(--spacing-md);
  }

  .logo-main {
    color: var(--color-foreground);
  }

  .logo-accent {
    color: var(--color-accent);
    font-weight: var(--font-weight-light);
  }

  .auth-subtitle {
    color: var(--color-foreground-muted);
    font-size: var(--font-size-lg);
    margin: 0;
  }

  .auth-form {
    width: 100%;
  }

  .auth-footer {
    text-align: center;
    margin-top: var(--spacing-xl);
  }

  .auth-footer p {
    color: var(--color-foreground-muted);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .auth-footer a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-fast);
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  /* Clerk Styling Overrides */
  :global(.clerk-root) {
    width: 100%;
  }

  :global(.clerk-card) {
    background: var(--glass-background) !important;
    backdrop-filter: var(--glass-blur) !important;
    -webkit-backdrop-filter: var(--glass-blur) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: var(--radius-xl) !important;
    box-shadow: var(--shadow-xl) !important;
    padding: var(--spacing-xl) !important;
  }

  :global(.clerk-title),
  :global(.clerk-subtitle) {
    display: none !important;
  }

  :global(.clerk-social-btn) {
    background: var(--color-background-elevated) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: var(--radius-lg) !important;
    color: var(--color-foreground) !important;
    transition: all var(--transition-fast) !important;
  }

  :global(.clerk-social-btn:hover) {
    background: var(--color-accent-muted) !important;
    border-color: var(--color-accent) !important;
    color: var(--color-accent) !important;
  }

  :global(.clerk-primary-btn) {
    background: var(--color-accent) !important;
    color: var(--color-black) !important;
    border-radius: var(--radius-lg) !important;
    font-weight: var(--font-weight-semibold) !important;
    text-transform: uppercase !important;
    letter-spacing: var(--letter-spacing-wide) !important;
    transition: all var(--transition-fast) !important;
  }

  :global(.clerk-primary-btn:hover) {
    background: var(--color-accent-hover) !important;
    box-shadow: 0 8px 24px var(--color-accent-glow) !important;
    transform: translateY(-2px) !important;
  }

  :global(.clerk-input) {
    background: var(--color-background-elevated) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: var(--radius-md) !important;
    color: var(--color-foreground) !important;
    transition: all var(--transition-fast) !important;
  }

  :global(.clerk-input:focus) {
    border-color: var(--color-accent) !important;
    box-shadow: 0 0 0 3px var(--color-accent-muted) !important;
  }

  :global(.clerk-label) {
    color: var(--color-foreground-muted) !important;
    font-size: var(--font-size-sm) !important;
  }

  :global(.clerk-link) {
    color: var(--color-accent) !important;
    text-decoration: none !important;
  }

  :global(.clerk-link:hover) {
    text-decoration: underline !important;
  }

  :global(.clerk-divider) {
    background: var(--color-border) !important;
  }

  :global(.clerk-divider-text) {
    color: var(--color-foreground-subtle) !important;
    background: transparent !important;
  }

  :global(.clerk-footer) {
    display: none !important;
  }
</style>
