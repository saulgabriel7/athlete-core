---
/**
 * ATHLETE CORE - Meal Details
 * Detalhes de uma refeição
 */

import Card from '../../components/common/Card.astro';
import { formatCalories, formatMacro, formatTags, formatIngredientes } from '../../utils/formatters';
import type { Meal } from '../../types/meal';

interface Props {
  meal: Meal;
}

const { meal } = Astro.props;

const tags = formatTags(meal.tags || []);
---

<div class="meal-details">
  <header class="meal-header">
    <h1>{meal.nome}</h1>
    
    {tags.length > 0 && (
      <div class="meal-tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </header>

  <div class="meal-content">
    <Card class="macros-card">
      <h2>Informações Nutricionais</h2>
      <div class="macros-grid">
        <div class="macro-item macro-calories">
          <span class="macro-value">{meal.calorias}</span>
          <span class="macro-label">kcal</span>
        </div>
        <div class="macro-item">
          <span class="macro-value">{meal.proteina}g</span>
          <span class="macro-label">Proteína</span>
          {meal.macrosPorcentagem && (
            <span class="macro-percent">{meal.macrosPorcentagem.proteina}%</span>
          )}
        </div>
        <div class="macro-item">
          <span class="macro-value">{meal.carboidrato}g</span>
          <span class="macro-label">Carboidrato</span>
          {meal.macrosPorcentagem && (
            <span class="macro-percent">{meal.macrosPorcentagem.carboidrato}%</span>
          )}
        </div>
        <div class="macro-item">
          <span class="macro-value">{meal.gordura}g</span>
          <span class="macro-label">Gordura</span>
          {meal.macrosPorcentagem && (
            <span class="macro-percent">{meal.macrosPorcentagem.gordura}%</span>
          )}
        </div>
      </div>
    </Card>

    <Card class="ingredients-card">
      <h2>Ingredientes</h2>
      <ul class="ingredients-list">
        {meal.ingredientes.map((ingrediente) => (
          <li>{ingrediente}</li>
        ))}
      </ul>
    </Card>

    {meal.preparo && (
      <Card class="preparo-card">
        <h2>Modo de Preparo</h2>
        <p>{meal.preparo}</p>
      </Card>
    )}
  </div>
</div>

<style>
  .meal-details {
    max-width: 800px;
  }

  .meal-header {
    margin-bottom: var(--spacing-2xl);
  }

  .meal-header h1 {
    font-size: var(--font-size-3xl);
    margin: 0 0 var(--spacing-md) 0;
  }

  .meal-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .meal-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .macros-card h2,
  .ingredients-card h2,
  .preparo-card h2 {
    font-size: var(--font-size-lg);
    margin: 0 0 var(--spacing-md) 0;
    padding-bottom: var(--spacing-sm);
    border-bottom: var(--border-width) solid var(--color-border-light);
  }

  .macros-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
    text-align: center;
  }

  .macro-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .macro-calories {
    background: var(--color-black);
    color: var(--color-white);
    padding: var(--spacing-md);
    margin: calc(var(--spacing-md) * -1);
    margin-right: 0;
  }

  .macro-value {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    line-height: 1;
  }

  .macro-label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    color: var(--color-foreground-muted);
  }

  .macro-calories .macro-label {
    color: var(--color-gray-medium);
  }

  .macro-percent {
    font-size: var(--font-size-xs);
    color: var(--color-foreground-muted);
  }

  .ingredients-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .ingredients-list li {
    padding: var(--spacing-sm) 0;
    border-bottom: var(--border-width) solid var(--color-border-light);
    position: relative;
    padding-left: var(--spacing-lg);
  }

  .ingredients-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--color-foreground-muted);
  }

  .ingredients-list li:last-child {
    border-bottom: none;
  }

  .preparo-card p {
    margin: 0;
    line-height: 1.8;
    color: var(--color-foreground-muted);
  }

  @media (max-width: 768px) {
    .macros-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .macro-calories {
      grid-column: span 2;
    }
  }
</style>

