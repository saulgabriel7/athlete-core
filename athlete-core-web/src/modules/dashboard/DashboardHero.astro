---
/**
 * ATHLETE CORE - Dashboard Hero
 * Saudação e resumo do dashboard com design premium
 */

import Card from '../../components/common/Card.astro';

interface Props {
  userName?: string | null;
  stats?: {
    totalTreinos: number;
    mediaPerformance: number;
    diasConsecutivos: number;
  };
}

const { userName, stats } = Astro.props;

const greeting = () => {
  const hour = new Date().getHours();
  if (hour < 12) return 'Bom dia';
  if (hour < 18) return 'Boa tarde';
  return 'Boa noite';
};

const getMotivationalText = () => {
  const texts = [
    'Pronto para mais um dia de evolução?',
    'Cada repetição conta!',
    'Foco no objetivo!',
    'Supere seus limites!',
  ];
  return texts[Math.floor(Math.random() * texts.length)];
};
---

<section class="dashboard-hero">
  <div class="hero-content">
    <div class="hero-greeting animate-fade-in">
      <span class="greeting-badge">
        <span class="badge-dot"></span>
        Online
      </span>
      <h1>{greeting()}, <span class="name-highlight">{userName || 'Atleta'}</span></h1>
      <p>{getMotivationalText()}</p>
    </div>

    {stats && (
      <div class="hero-stats animate-fade-in stagger-1">
        <div class="stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m6.5 6.5 11 11"/><path d="m21 21-1-1"/><path d="m3 3 1 1"/><path d="m18 22 4-4"/><path d="m2 6 4-4"/><path d="m3 10 7-7"/><path d="m14 21 7-7"/>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{stats.totalTreinos}</span>
            <span class="stat-label">Treinos Completos</span>
          </div>
        </div>
        
        <div class="stat-card highlight">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 20h9"/><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"/>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{stats.mediaPerformance}<small>%</small></span>
            <span class="stat-label">Performance Média</span>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{stats.diasConsecutivos}</span>
            <span class="stat-label">Dias Seguidos</span>
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .dashboard-hero {
    margin-bottom: var(--spacing-2xl);
    position: relative;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .hero-greeting {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .greeting-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: var(--color-success);
    background: rgba(34, 197, 94, 0.1);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-full);
    width: fit-content;
    border: 1px solid rgba(34, 197, 94, 0.2);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--color-success);
    border-radius: var(--radius-full);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .hero-greeting h1 {
    font-size: clamp(var(--font-size-2xl), 5vw, var(--font-size-4xl));
    font-weight: var(--font-weight-bold);
    margin: 0;
    letter-spacing: var(--letter-spacing-tight);
    line-height: var(--line-height-tight);
  }

  .name-highlight {
    background: linear-gradient(135deg, var(--color-accent) 0%, #8fff3b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-greeting p {
    color: var(--color-foreground-muted);
    font-size: var(--font-size-lg);
    margin: 0;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--glass-background);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .stat-card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-2px);
  }

  .stat-card.highlight {
    background: var(--color-accent-muted);
    border-color: rgba(196, 255, 59, 0.2);
  }

  .stat-card.highlight:hover {
    border-color: var(--color-accent);
    box-shadow: 0 8px 24px var(--color-accent-glow);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background-elevated);
    border-radius: var(--radius-md);
    color: var(--color-foreground-muted);
    flex-shrink: 0;
  }

  .stat-card.highlight .stat-icon {
    background: rgba(196, 255, 59, 0.2);
    color: var(--color-accent);
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .stat-value {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    line-height: 1;
    color: var(--color-foreground);
    font-variant-numeric: tabular-nums;
  }

  .stat-value small {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
  }

  .stat-card.highlight .stat-value {
    color: var(--color-accent);
  }

  .stat-label {
    font-size: var(--font-size-xs);
    color: var(--color-foreground-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    margin-top: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (max-width: 900px) {
    .hero-stats {
      grid-template-columns: 1fr;
    }
  }

  /* Animation delays */
  .animate-fade-in {
    animation: fadeInUp var(--transition-base) ease-out backwards;
  }

  .stagger-1 {
    animation-delay: 100ms;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
