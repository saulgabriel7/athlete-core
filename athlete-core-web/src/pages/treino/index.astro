---
/**
 * ATHLETE CORE - Treinos Page
 * Lista de planos de treino com design premium
 */

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import WorkoutList from '../../modules/treino/WorkoutList.astro';
import Button from '../../components/common/Button.astro';
import { getUserId } from '../../services/clerkServer';
import { getWorkoutPlans } from '../../services/mcpClient';
import type { WorkoutPlan } from '../../types/workout';

const userId = getUserId(Astro.locals);

let workouts: WorkoutPlan[] = [];
let error: string | null = null;

if (userId) {
  try {
    const response = await getWorkoutPlans(userId);
    if (response.success) {
      workouts = response.data;
    } else {
      error = response.error;
    }
  } catch (e) {
    error = 'Erro ao carregar treinos';
  }
}
---

<DashboardLayout title="Treinos" pageTitle="Meus Treinos">
  {error ? (
    <div class="error-state">
      <div class="error-icon">⚠️</div>
      <h3>Ops! Algo deu errado</h3>
      <p>{error}</p>
      <p class="error-hint">
        Verifique se o servidor MCP está rodando em <code>http://localhost:3000</code>
      </p>
    </div>
  ) : (
    <WorkoutList 
      workouts={workouts} 
      title="Planos de Treino"
      subtitle="Seus planos de treino personalizados"
    >
      <div slot="actions" class="actions">
        <button id="generate-btn" class="btn-generate">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 8V4H8"/>
            <rect width="16" height="12" x="4" y="8" rx="2"/>
            <path d="M2 14h2"/>
            <path d="M20 14h2"/>
            <path d="M15 13v2"/>
            <path d="M9 13v2"/>
          </svg>
          Gerar com IA
        </button>
      </div>
    </WorkoutList>
  )}
</DashboardLayout>

<script define:vars={{ userId }}>
  const btn = document.getElementById('generate-btn');
  
  btn?.addEventListener('click', async () => {
    if (!confirm('Deseja gerar um novo plano de treino baseado no seu perfil?')) return;

    btn.disabled = true;
    btn.innerHTML = `
      <svg class="spinner" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10" opacity="0.25"/>
        <path d="M12 2a10 10 0 0 1 10 10"/>
      </svg>
      Gerando...
    `;

    try {
      const res = await fetch('/api/workout/generate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ userId, diasPorSemana: 4 })
      });

      const data = await res.json();

      if (data.success) {
        window.location.reload();
      } else {
        alert('Erro ao gerar plano: ' + (data.error || 'Desconhecido'));
      }
    } catch (e) {
      alert('Erro de conexão');
    } finally {
      btn.disabled = false;
      btn.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 8V4H8"/>
          <rect width="16" height="12" x="4" y="8" rx="2"/>
          <path d="M2 14h2"/>
          <path d="M20 14h2"/>
          <path d="M15 13v2"/>
          <path d="M9 13v2"/>
        </svg>
        Gerar com IA
      `;
    }
  });
</script>

<style>
  .actions {
    margin-top: var(--spacing-md);
    display: flex;
    justify-content: flex-end;
  }

  .btn-generate {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: var(--color-accent);
    color: var(--color-black);
    border: 1px solid var(--color-accent);
    padding: var(--spacing-sm) var(--spacing-lg);
    cursor: pointer;
    font-family: inherit;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .btn-generate:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--color-accent-glow);
  }
  
  .btn-generate:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .btn-generate :global(.spinner) {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .error-state {
    text-align: center;
    padding: var(--spacing-3xl);
    background: var(--glass-background);
    border: 1px dashed var(--color-border);
    border-radius: var(--radius-lg);
  }

  .error-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-md);
  }

  .error-state h3 {
    font-size: var(--font-size-lg);
    margin: 0 0 var(--spacing-sm) 0;
    color: var(--color-foreground);
  }

  .error-state p {
    margin: 0 0 var(--spacing-md) 0;
    color: var(--color-foreground-muted);
  }

  .error-hint {
    font-size: var(--font-size-sm);
  }

  .error-hint code {
    background: var(--color-background-elevated);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: var(--font-size-xs);
    border: 1px solid var(--color-border);
  }
</style>
